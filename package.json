{
  "name": "@mauricewijnia/block-editor",
  "version": "1.0.0-alpha.3",
  "description": "A standalone implementation of the WordPress Block Editor",
  "main": "dist/index.js",
  "keywords": [
    "block",
    "editor",
    "gutenberg",
    "block-editor"
  ],
  "author": "Maurice Wijnia",
  "license": "GPL-2.0-or-later",
  "types": "dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build:ts": "tsc",
    "build:sass": "sass src/styles.scss:dist/styles.css",
    "build": "webpack --config webpack/webpack.prod.js",
    "predevelop": "npm run clean",
    "develop": "webpack --config webpack/webpack.dev.js",
    "watch": "npm run develop -- --watch",
    "start": "webpack serve --config webpack/webpack.dev.js"
  },
  "scripts-backup": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "webpack --mode production",
    "predevelop": "npm run clean",
    "develop": "webpack --mode development",
    "watch": "npm run develop -- --watch",
    "start": "webpack serve --mode development"
  },
  "dependencies": {
    "@types/react": "^16.8.0",
    "@wordpress/api-fetch": "~5.2.2",
    "@wordpress/base-styles": "~4.0.0",
    "@wordpress/block-editor": "~7.0.2",
    "@wordpress/block-library": "~6.0.0",
    "@wordpress/blocks": "~11.1.0",
    "@wordpress/components": "~18.0.0",
    "@wordpress/data": "~6.1.0",
    "@wordpress/element": "~4.0.1",
    "@wordpress/format-library": "~3.0.2",
    "@wordpress/hooks": "~3.2.0",
    "@wordpress/keyboard-shortcuts": "~3.0.2",
    "axios": "^0.21.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "mini-css-extract-plugin": "^1.3.5",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0",
    "webpack-merge": "^5.8.0"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauricewijnia/block-editor.git"
  },
  "bugs": {
    "url": "https://github.com/mauricewijnia/block-editor/issues"
  },
  "homepage": "https://github.com/mauricewijnia/block-editor#readme"
